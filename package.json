{
    "name": "monorepo",
    "version": "1.0.0",
    "repository": "https://github.com/kevenleone/javascript-course-project.git",
    "author": "Keven <keven.santos.sz@gmail.com>",
    "license": "MIT",
    "private": true,
    "scripts": {
      "lint": "yarn lint:backend & yarn lint:frontend",
      "lint:backend": "yarn workspace @monorepo/backend lint",
      "lint:frontend": "yarn workspace @monorepo/frontend lint",
      "start:frontend": "yarn workspace @monorepo/frontend start",
      "start:backend": "yarn workspace @monorepo/backend dev",
      "migrate": "yarn workspace @monorepo/backend migrate",
      "studio": "yarn workspace @monorepo/backend studio",
      "format:frontend": "eslint packages/frontend/**/*.ts --fix",
      "format": "eslint packages/backend/src/* --ext .ts --fix",
      "test": "jest"
    },
    "workspaces": {
      "packages": [
        "packages/*"
      ]
    },
    "devDependencies": {
      "@monorepo/eslint-config-node": "*"
    }
  }
  